<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:barrierMargin="0dp"
    tools:context=".ui.CartaFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reciclerViewCarta"
        android:layout_width="380dp"
        android:layout_height="717dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewCartaFragment"
        android:layout_width="410dp"
        android:layout_height="639dp"
        android:src="@drawable/terraterra"
        app:layout_constraintBottom_toBottomOf="@+id/reciclerViewCarta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/reciclerViewCarta"
        app:layout_constraintVertical_bias="0.0" />

